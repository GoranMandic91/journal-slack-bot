{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "object-literal-sort-keys": false,
        "no-var-requires": [
            false
        ],
        "ordered-imports": [
            false
        ],
        "max-line-length": [
            false
        ],
        "no-console": [
            false
        ],
        "no-shadowed-variable": [
            false
        ],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                },
                "esSpecCompliant": true
            }
        ],
        "prefer-for-of": [
            false
        ],
        "variable-name": [
            true,
            "allow-pascal-case",
            "allow-snake-case"
        ]
    },
    "rulesDirectory": []
}